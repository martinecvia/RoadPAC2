<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<RibbonTab xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   IsVisible="True" KeyTip="RP" 
		   Name="RoadPAC2" Title="RoadPAC2" IsEnabled="True" IsPanelEnabled="True" AllowTearOffContextualPanels="False">
	<!-- Panel: RoadPAC -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource Title="RoadPAC">
			<!-- Sole purpose of this dialog launcher is to let user more options from where he can load project -->
			<DialogLauncher Text="Načti složku projektu" CommandHandler="RP_PROSPECTOR_NEW" />
			<RibbonButton Text="Spusť&#13;RoadPAC" Name="Spusť&#13;RoadPAC" ShowText="True" Size="Large" Orientation="Vertical" ShowImage="True"
						  Image="rp_logo" LargeImage="rp_logo_blue"
						  CommandHandler="XX:RoadpacNET7.exe" />
			<!-- Projector -->
			<RibbonButton Text="Projektor" Size="Large" Orientation="Vertical" ShowText="True" 
						  Image="rp_AbstractClass" LargeImage="rp_AbstractClass" CommandHandler="RP_PROSPECTOR" />
			<RibbonSeparator Id="AcRibbonSeparator" SeparatorStyle="Spacer" />
			<RibbonRowPanel>
				<RibbonButton Text="Otevři (.solution)" ShowText="False" Image="rp_AddEntity" LargeImage="rp_AddEntity" CommandHandler="RP_PROSPECTOR_SOLUTION" />
				<RibbonRowBreak />
				<RibbonButton Text="Otevři složku projektu" ShowText="False" Image="rp_FolderBrowserDialogControl" LargeImage="rp_FolderBrowserDialogControl" CommandHandler="RP_PROSPECTOR_NEW" />
				<RibbonRowBreak />
				<RibbonButton Text="Nový projekt" ShowText="False" CommandHandler="RP_PROSPECTOR_NEW" />
			</RibbonRowPanel>
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: DTM -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" HighlightPanelTitleBar="False" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[Terén]]></Title>
			<DialogLauncher Orientation="Horizontal" IsCheckable="False" ShowImage="True" IsEnabled="True" Size="Standard" GroupLocation="Middle"
							AllowInToolBar="True" AllowInStatusBar="True" ResizeStyle="HideText"
							Text="Otevři složku s terénními modely" ShowText="False" CommandHandler="RP_COMMAND(OPEN_ACTIVE_DTM_DIRECTORY)" />
			<RibbonSplitButton Text="Terénní&#13;práce" Name="RP_RUN_DTM" ShowText="True" Size="Large" Orientation="Vertical" ShowImage="True"
							   Image="rp_img_default_16" LargeImage="rp_img_default_32" CommandHandler="RP_RUN(DTM)" SynchronizeOption="Image">
				<RibbonToggleButton Text="Spusti DTM" ShowText="True" Image="rp_DTM_32" LargeImage="rp_DTM_32" />
				<RibbonToggleButton Text="Sejmi řez: Podélný" ShowText="True" Image="rp_CaptureFrame" LargeImage="rp_CaptureFrame" />
				<RibbonToggleButton Text="Sejmi řez: Příčný" ShowText="True" Image="rp_CaptureFrame" LargeImage="rp_CaptureFrame" />
				<RibbonToggleButton Text="Ornice" ShowText="True" Image="rp_Ornice_32" LargeImage="rp_Ornice_32" />
				<RibbonToggleButton Text="Geologie" ShowText="True" Image="rp_Geologie_32" LargeImage="rp_Geologie_32" />
			</RibbonSplitButton>
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: Směrové vedení trasy -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" HighlightPanelTitleBar="False">
		<RibbonPanelSource>
			<Title><![CDATA[Směrové vedení]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Route]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Route" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: Výškové vedení trasy -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[Výškové vedení]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Profile]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Profile" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: Koridor & přičné úspořádání -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[Koridor & příčné uspořádání]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Corridor]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Corridor" Id="TagControllVisibility" />
			<RibbonButton Text="Tags:[Corridor, CrossSection]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Corridor, CrossSection" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: Vytyčení -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[Vytyčení]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Corridor]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Corridor" Id="TagControllVisibility" />
			<RibbonButton Text="Tags:[Survey]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Survey" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: IFC -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[IFC]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Corridor]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Corridor" Id="TagControllVisibility" />
			<RibbonButton Text="Tags:[IFC]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="IFC" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
	<!-- Panel: Kreslení spojených řezů -->
	<RibbonPanel FloatingOrientation="Vertical" CanToggleOrientation="True" IsEnabled="True">
		<RibbonPanelSource>
			<Title><![CDATA[Kreslení spojených řezů]]></Title>
			<RibbonButton Text="Tags:[]" Size="Large" ShowText="True" Orientation="Vertical" />
			<RibbonButton Text="Tags:[Corridor]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="Corridor" Id="TagControllVisibility" />
			<RibbonButton Text="Tags:[CombinedCrossSections]" Size="Large" ShowText="True" Orientation="Vertical"
						  IsVisible="False" Tag="CombinedCrossSections" Id="TagControllVisibility" />
		</RibbonPanelSource>
	</RibbonPanel>
</RibbonTab>