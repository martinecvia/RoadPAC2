<UserControl x:Class="Shared.Windows.Projector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
        xmlns:models="clr-namespace:Shared.Windows.Models"
        xmlns:shared="clr-namespace:Shared.Windows" 
             
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=shared:ProjectorViewModel, IsDesignTimeCreatable=True}"
        Height="800" MaxHeight="800" Width="350">
    <UserControl.Resources>
        <models:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <models:StringToSolidColorBrushConverter x:Key="StringToSolidColorBrushConverter" />
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="30" Margin="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Search bar -->
            <TextBox Grid.Column="0" Height="30" VerticalAlignment="Center" Margin="0,0,1,0"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                 ToolTip="Search in routes ...">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="LightGoldenrodYellow"/>
                        <Style.Triggers>
                            <!-- Override when empty -->
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <!-- Refresh Button -->
            <Button Grid.Column="1" Width="30" Margin="0,0,1,0"
                    ToolTip="Clear search">
                <Image Source="./Assets/arrow-right.png" Width="16" Height="16"/>
            </Button>

            <!-- Settings Button -->
            <Button Grid.Column="2" Width="30"
                    ToolTip="Collaps routes">
                <Image Source="./Assets/arrow-right.png" Width="16" Height="16"/>
            </Button>
        </Grid>
        <!-- TreeView -->
        <TreeView x:Name="ProjectTree" 
                  ItemsSource="{Binding FilteredItems}" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TreeView.Resources>
                <ContextMenu x:Key="ItemContextMenu">
                    <MenuItem Header="Debug test" CommandParameter="{Binding}" Click="MenuTest_Click"/>
                </ContextMenu>

                <Style TargetType="TreeViewItem">
                    <Setter Property="ContextMenu"
                    Value="{StaticResource ItemContextMenu}" />
                </Style>
            </TreeView.Resources>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type models:TreeItem}" ItemsSource="{Binding}">
                    <DockPanel>
                         <!-- Icon -->
                        <Image Width="16" Height="16" Source="{Binding ImageSource}" DockPanel.Dock="Left" Margin="2" />
                        <!-- DisplayName -->
                        <TextBlock x:Name="DisplayName" Margin="2"
                               Text="{Binding DisplayName}" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontStyle" Value="Normal"/>
                                    <Style.Triggers>
                                        <!-- IsRouteNode=true -->
                                        <DataTrigger Binding="{Binding IsRouteNode}" Value="True">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <!-- GroupNodes without items should be grayied out-->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRouteNode}" Value="False"/>
                                                <Condition Binding="{Binding IsGroupNode}" Value="True"/>
                                                <Condition Binding="{Binding ItemCount}" Value="0"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Foreground" Value="Gray"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- ItemCount -->
                        <TextBlock VerticalAlignment="Center" Margin="2" x:Name="ItemCount" 
                                   Text="{Binding ItemCount, StringFormat='({0})'}"
                                   Foreground="{Binding ItemCountColor, Converter={StaticResource StringToSolidColorBrushConverter}}"/>

                        <Image Width="16" Height="16" DockPanel.Dock="Right" Margin="2" 
                           Source="{Binding WarningImageSource}"
                           Visibility="{Binding DisplayWarning, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Image.ToolTip>
                                <TextBlock Text="{Binding WarningToolTip}" TextWrapping="Wrap"/>
                            </Image.ToolTip>
                        </Image>
                    </DockPanel>

                    <!-- Triggers -->
                    <HierarchicalDataTemplate.Triggers>
                        <DataTrigger Binding="{Binding ItemCount}" Value="0">
                            <Setter TargetName="ItemCount" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ItemCount" Property="FontWeight" Value="DemiBold"/>
                        </DataTrigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>