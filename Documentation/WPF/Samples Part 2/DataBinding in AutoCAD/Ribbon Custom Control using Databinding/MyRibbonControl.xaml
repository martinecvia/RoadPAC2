<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adiw="clr-namespace:Autodesk.Internal.Windows;assembly=AdWindows"
    xmlns:src="clr-namespace:RibbonCustCtrlDataBinding"    
  >

  <adiw:RibbonCompositeItem x:Uid="SimpleDataBinding" x:Key="fentonsSimpleDataBinding" Name="Simple Data Binding" >
    <adiw:RibbonCompositeItem.Content>
      <DataTemplate>
        <Grid Background="PaleGoldenrod">
          <StackPanel Width="200" Height="88" DataContext="{Binding Source={x:Static src:CompanyDetails.details}}" >
            <TextBox Text="{Binding Path=FirstName}"/>
            <TextBox Text="{Binding Path=LastName}"/>
            <TextBox Text="{Binding Path=JobTitle}"/>
            <TextBox Text="{Binding Path=CompanyName}" />
          </StackPanel>
        </Grid>
      </DataTemplate>
    </adiw:RibbonCompositeItem.Content>
  </adiw:RibbonCompositeItem>
</ResourceDictionary>